{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "/usr/bin/g++-11",
            "args": [
                "-g",
                "-std=c++17",
                "${workspaceFolder}/src/cinco_noites/*.cpp",
                "${workspaceFolder}/src/cinco_noites/handlers/*.cpp",
                "${workspaceFolder}/src/cinco_noites/objects/*.cpp",
                "${workspaceFolder}/src/cinco_noites/screens/*.cpp",
                "-o",
                "${workspaceFolder}/main.exe",
                "-I/usr/include/opencv4",
                "-I/usr/include/SFML/**",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "`pkg-config", "--libs", "--static", "opencv4`"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}